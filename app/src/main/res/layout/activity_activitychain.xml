<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gch100"
        app:layout_constraintLeft_toRightOf="@+id/gcv0"
        app:layout_constraintRight_toLeftOf="@+id/gcv80"
        app:layout_constraintTop_toBottomOf="@+id/gch0"
        android:divider="#ffffff"
        android:dividerHeight="4px"
        />

    <android.support.constraint.Guideline
        android:id="@+id/gch40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <android.support.constraint.Guideline
        android:id="@+id/gch45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/gch55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/gcv05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/gcv85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/gcv100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1" />

    <android.support.constraint.Guideline
        android:id="@+id/gch30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <Button
        android:id="@+id/btPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_add_button"
        app:layout_constraintBottom_toTopOf="@+id/gch25"
        app:layout_constraintLeft_toRightOf="@+id/gcv85"
        app:layout_constraintRight_toLeftOf="@+id/gcv100"
        app:layout_constraintTop_toBottomOf="@+id/gch15"
        app:showAsAction="always" />

    <Button
        android:id="@+id/btMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_delete_button"
        app:layout_constraintBottom_toTopOf="@+id/gch40"
        app:layout_constraintLeft_toRightOf="@+id/gcv85"
        app:layout_constraintRight_toLeftOf="@+id/gcv100"
        app:layout_constraintTop_toBottomOf="@+id/gch30"
        app:showAsAction="always" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_save_button"
        android:textColor="@color/saveButtonColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gch55"
        app:layout_constraintLeft_toRightOf="@+id/gcv85"
        app:layout_constraintRight_toLeftOf="@+id/gcv100"
        app:layout_constraintTop_toBottomOf="@+id/gch45"
        app:showAsAction="always" />

    <android.support.constraint.Guideline
        android:id="@+id/gcv80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <android.support.constraint.Guideline
        android:id="@+id/gch100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <android.support.constraint.Guideline
        android:id="@+id/gch0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0" />

    <android.support.constraint.Guideline
        android:id="@+id/gcv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <android.support.constraint.Guideline
        android:id="@+id/gch25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/gch15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />


</android.support.constraint.ConstraintLayout>